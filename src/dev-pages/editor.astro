---
import Layout from '../layouts/Layout.astro';
import RefinedMDXEditor from '../components/editor/RefinedMDXEditor';

// 本番環境では404を返す
if (import.meta.env.PROD) {
  return new Response(null, { status: 404 });
}

const title = 'MDX Editor';
const description = 'MDXエディタ';
---

<Layout description={description} robots="noindex, nofollow" title={title}>
  <main class="h-screen overflow-hidden bg-white dark:bg-gray-900">
    <RefinedMDXEditor client:only="react" />
  </main>
</Layout>
