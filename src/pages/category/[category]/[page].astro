---
import { getCollection, type CollectionEntry } from 'astro:content';
import type { GetStaticPaths, Page } from 'astro';
import Layout from '@/layouts/Layout.astro';
import FormattedDate from '@/components/FormattedDate.astro';
import { Image } from 'astro:assets';
import { CATEGORIES } from '@/consts';
import type { Category } from '@/consts';
import Pagination from '@/components/Pagination.astro';

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allPosts = await getCollection('blog');
  const allPostsSorted = allPosts.sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );

  // カテゴリ別の記事数を計算
  const categoryCounts = CATEGORIES.reduce(
    (acc, category) => {
      acc[category] = allPosts.filter(post => post.data.category === category).length;
      return acc;
    },
    {} as Record<Category, number>
  );

  const paths = [];

  for (const category of CATEGORIES) {
    const categoryPosts = allPostsSorted.filter(post => post.data.category === category);
    const paginated = paginate(categoryPosts, {
      params: { category: encodeURIComponent(category) },
      pageSize: 9,
      props: {
        category,
        allPostsCount: allPosts.length,
        categoryCounts,
      },
    });
    paths.push(...paginated);
  }
  return paths;
};

interface Props {
  page: Page<CollectionEntry<'blog'>>;
  category: Category;
  allPostsCount: number;
  categoryCounts: Record<Category, number>;
}

const { page, category, allPostsCount, categoryCounts } = Astro.props;
const { data: posts } = page;
---

<Layout description={`${category}に関する記事一覧`} title={`${category}の記事`}>
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          {category}の記事
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          {page.total}件の記事があります
        </p>
        <div class="w-24 h-1 bg-primary-600 mx-auto mt-6"></div>
      </div>

      <!-- Category Navigation -->
      <div class="mb-12">
        <div class="flex flex-wrap justify-center gap-3">
          <a
            class="px-4 py-2 rounded-full text-sm font-medium transition-colors duration-200 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700"
            href="/blog"
          >
            すべて ({allPostsCount})
          </a>
          {
            CATEGORIES.map(cat => (
              <a
                class:list={[
                  `px-4 py-2 rounded-full text-sm font-medium transition-colors duration-200`,
                  {
                    'bg-primary-600 text-white': category === cat,
                    'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700':
                      category !== cat,
                  },
                ]}
                href={`/category/${encodeURIComponent(cat)}`}
              >
                {cat} ({categoryCounts[cat]})
              </a>
            ))
          }
        </div>
      </div>

      <!-- Breadcrumb -->
      <nav aria-label="パンくずナビ" class="mb-8">
        <ol class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-300">
          <li>
            <a
              class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
              href="/"
            >
              ホーム
            </a>
          </li>
          <li class="flex items-center">
            <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
              <path
                clip-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                fill-rule="evenodd"></path>
            </svg>
            <a
              class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
              href="/blog"
            >
              ブログ
            </a>
          </li>
          <li class="flex items-center">
            <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
              <path
                clip-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                fill-rule="evenodd"></path>
            </svg>
            <span class="text-gray-900 dark:text-white font-medium">{category}</span>
          </li>
        </ol>
      </nav>

      <!-- Posts Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          posts.map(post => (
            <article class="card group hover:shadow-xl transition-all duration-300">
              <a class="block" href={`/blog/${post.id}/`}>
                {post.data.heroImage && (
                  <div class="mb-4 overflow-hidden rounded-lg">
                    <Image
                      alt={post.data.title}
                      class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                      height={225}
                      src={post.data.heroImage}
                      width={400}
                    />
                  </div>
                )}

                <div class="space-y-3">
                  <h2 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors line-clamp-2">
                    {post.data.title}
                  </h2>

                  {post.data.description && (
                    <p class="text-gray-600 dark:text-gray-300 text-sm line-clamp-3">
                      {post.data.description}
                    </p>
                  )}

                  <div class="flex items-center justify-between pt-2">
                    <div class="text-sm text-gray-500 dark:text-gray-300">
                      <FormattedDate date={post.data.pubDate} />
                    </div>

                    <span class="text-primary-600 dark:text-primary-400 text-sm font-medium group-hover:text-primary-700 dark:group-hover:text-primary-300 transition-colors">
                      続きを読む →
                    </span>
                  </div>

                  <div class="mt-3">
                    <span class="inline-block bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-xs px-2 py-1 rounded-full">
                      {post.data.category}
                    </span>
                  </div>
                </div>
              </a>
            </article>
          ))
        }
      </div>

      <!-- Pagination -->
      <Pagination {page} />

      {
        posts.length === 0 && (
          <div class="text-center py-16">
            <p class="text-gray-600 dark:text-gray-300 text-lg">
              {category}の記事が見つかりません。
            </p>
            <a
              class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium mt-4 inline-block"
              href="/blog"
            >
              すべての記事を見る
            </a>
          </div>
        )
      }
    </div>
  </div>
</Layout>
