---
import Layout from '@/layouts/Layout.astro';
import { Image } from 'astro:assets';
import profileImage from '../assets/profile.png';

export const prerender = true;
---

<Layout
  description="あきらき（kiakiraki）のプロフィールページです。SNSや活動内容について紹介しています。"
  ogSlug="about"
  title="プロフィール"
>
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          プロフィール
        </h1>
        <div class="w-24 h-1 bg-primary-600 mx-auto"></div>
      </div>

      <!-- Profile Content -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Profile Image & Basic Info -->
        <div class="lg:col-span-1">
          <div class="card text-center">
            <div class="w-32 h-32 mx-auto mb-6">
              <Image
                alt="あきらきのプロフィール画像"
                class="w-32 h-32 rounded-full object-cover shadow-lg"
                height={128}
                src={profileImage}
                width={128}
              />
            </div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">あきらき</h2>
            <p class="text-primary-600 dark:text-primary-400 mb-4">kiakiraki</p>

            <!-- SNS Links -->
            <div class="flex justify-center space-x-4">
              <a
                aria-label="X (Twitter)"
                class="text-gray-600 hover:text-primary-600 dark:text-gray-300 dark:hover:text-primary-400 transition-colors"
                href="https://x.com/__kiakiraki__"
                rel="noopener noreferrer"
                target="_blank"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                  ></path>
                </svg>
              </a>

              <a
                aria-label="mixi2"
                class="text-gray-600 hover:text-primary-600 dark:text-gray-300 dark:hover:text-primary-400 transition-colors"
                href="https://mixi.social/@kiakiraki"
                rel="noopener noreferrer"
                target="_blank"
              >
                <img
                  alt="mixi2"
                  class="w-6 h-6"
                  src="https://mixi.social/_next/static/media/icon_logo_symbol.dc1a10ac.svg"
                />
              </a>

              <a
                aria-label="YouTube"
                class="text-gray-600 hover:text-primary-600 dark:text-gray-300 dark:hover:text-primary-400 transition-colors"
                href="https://www.youtube.com/@kiakiraki"
                rel="noopener noreferrer"
                target="_blank"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- About Content -->
        <div class="lg:col-span-2 space-y-8">
          <div class="card">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">SNS・その他</h3>
            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <svg
                  class="w-5 h-5 text-gray-600 dark:text-gray-300"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                  ></path>
                </svg>
                <a
                  class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors"
                  href="https://x.com/__kiakiraki__"
                  rel="noopener noreferrer"
                  target="_blank"
                >
                  X (Twitter): @__kiakiraki__
                </a>
              </div>

              <div class="flex items-center gap-3">
                <img
                  alt="mixi2"
                  class="w-5 h-5"
                  src="https://mixi.social/_next/static/media/icon_logo_symbol.dc1a10ac.svg"
                />
                <a
                  class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors"
                  href="https://mixi.social/@kiakiraki"
                  rel="noopener noreferrer"
                  target="_blank"
                >
                  mixi2: @kiakiraki
                </a>
              </div>

              <div class="flex items-center gap-3">
                <svg
                  class="w-5 h-5 text-gray-600 dark:text-gray-300"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                  ></path>
                </svg>
                <a
                  class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors"
                  href="https://www.youtube.com/@kiakiraki"
                  rel="noopener noreferrer"
                  target="_blank"
                >
                  YouTube: @kiakiraki
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
