---
import Layout from '@/layouts/Layout.astro';
import FormattedDate from '@/components/FormattedDate.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { POSTS_PER_PAGE } from '@/consts';

export const prerender = true;

export async function getStaticPaths() {
  const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );

  const totalPages = Math.ceil(posts.length / POSTS_PER_PAGE);

  // Generate pages 2 onwards (page 1 is /blog/)
  return Array.from({ length: totalPages - 1 }, (_, i) => {
    const page = i + 2;
    const start = (page - 1) * POSTS_PER_PAGE;
    const end = start + POSTS_PER_PAGE;

    return {
      params: { page: String(page) },
      props: {
        posts: posts.slice(start, end),
        currentPage: page,
        totalPages,
        totalPosts: posts.length,
      },
    };
  });
}

interface Props {
  posts: Awaited<ReturnType<typeof getCollection<'blog'>>>;
  currentPage: number;
  totalPages: number;
  totalPosts: number;
}

const { posts, currentPage, totalPages, totalPosts } = Astro.props;
---

<Layout
  description={`ブログ記事一覧 - ${currentPage}ページ目`}
  robots="noindex, follow"
  title={`ブログ記事一覧 - ${currentPage}ページ`}
>
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          ブログ記事一覧
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          全{totalPosts}件中 {(currentPage - 1) * POSTS_PER_PAGE + 1}〜{
            Math.min(currentPage * POSTS_PER_PAGE, totalPosts)
          }件を表示
        </p>
        <div class="w-24 h-1 bg-primary-600 mx-auto mt-6"></div>
      </div>

      <!-- Posts Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          posts.map(post => (
            <article class="card group hover:shadow-xl transition-all duration-300">
              <a class="block" href={`/blog/${post.id}/`}>
                {post.data.heroImage && (
                  <div class="mb-4 overflow-hidden rounded-lg">
                    <Image
                      alt={post.data.title}
                      class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                      decoding="async"
                      height={225}
                      loading="lazy"
                      src={post.data.heroImage}
                      width={400}
                    />
                  </div>
                )}

                <div class="space-y-3">
                  <h2 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors line-clamp-2">
                    {post.data.title}
                  </h2>

                  {post.data.description && (
                    <p class="text-gray-600 dark:text-gray-300 text-sm line-clamp-3">
                      {post.data.description}
                    </p>
                  )}

                  <div class="flex items-center justify-between pt-2">
                    <div class="text-sm text-gray-500 dark:text-gray-300">
                      <FormattedDate date={post.data.pubDate} />
                    </div>

                    <span class="text-primary-600 dark:text-primary-400 text-sm font-medium group-hover:text-primary-700 dark:group-hover:text-primary-300 transition-colors">
                      続きを読む →
                    </span>
                  </div>

                  <div class="mt-3">
                    <span class="inline-block bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-xs px-2 py-1 rounded-full">
                      {post.data.category}
                    </span>
                  </div>
                </div>
              </a>
            </article>
          ))
        }
      </div>

      <!-- Pagination -->
      <nav aria-label="ページネーション" class="mt-16 flex justify-center items-center gap-2">
        {
          currentPage > 1 && (
            <a
              class="px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
              href={currentPage === 2 ? '/blog/' : `/blog/page/${currentPage - 1}/`}
            >
              ← 前へ
            </a>
          )
        }

        {
          Array.from({ length: totalPages }, (_, i) => i + 1).map(page => (
            <a
              class:list={[
                'px-4 py-2 rounded-lg transition-colors',
                {
                  'bg-primary-600 text-white': page === currentPage,
                  'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700':
                    page !== currentPage,
                },
              ]}
              href={page === 1 ? '/blog/' : `/blog/page/${page}/`}
            >
              {page}
            </a>
          ))
        }

        {
          currentPage < totalPages && (
            <a
              class="px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
              href={`/blog/page/${currentPage + 1}/`}
            >
              次へ →
            </a>
          )
        }
      </nav>
    </div>
  </div>
</Layout>
