---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import '@/styles/global.css';

import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  description?: string;
  image?: ImageMetadata | string;
  ogSlug?: string;
}

const { title, description, image, ogSlug } = Astro.props;
---

<!doctype html>
<html class="h-full" lang="ja">
  <head>
    <BaseHead description={description} image={image} ogSlug={ogSlug} title={title} />
    <script is:inline>
      // Theme initialization - must run immediately to prevent flash
      function initTheme() {
        const theme = (() => {
          if (typeof localStorage !== 'undefined') {
            const stored = localStorage.getItem('theme');
            if (stored) return stored;
          }
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        })();
        
        document.documentElement.classList.toggle('dark', theme === 'dark');
      }
      initTheme();
    </script>
  </head>
  <body class="min-h-full flex flex-col bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
