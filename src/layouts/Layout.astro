---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import '@/styles/global.css';

import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  description?: string;
  image?: ImageMetadata | string;
  ogSlug?: string;
  robots?: string;
}

const { title, description, image, ogSlug, robots } = Astro.props;
---

<!doctype html>
<html class="h-full" lang="ja">
  <head>
    <script is:inline>
      // 初期描画前にテーマを適用してFOUCを防ぐ
      (() => {
        try {
          const stored = localStorage.getItem('theme');
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          const useDark = stored ? stored === 'dark' : prefersDark;
          document.documentElement.classList.toggle('dark', useDark);
          document.documentElement.style.colorScheme = useDark ? 'dark' : 'light';
        } catch {
          // localStorage が使えない環境では何もしない
        }
      })();
    </script>
    <BaseHead
      description={description}
      image={image}
      ogSlug={ogSlug}
      robots={robots}
      title={title}
    />
  </head>
  <body
    class="min-h-full flex flex-col bg-white dark:bg-[#0c0f14] text-gray-900 dark:text-[#e2e8f0]"
  >
    <!-- Dark mode background effects (dot grid + gradient orb) -->
    <div aria-hidden="true" class="dark-bg-effects">
      <div class="dark-bg-effects__dots"></div>
      <div class="dark-bg-effects__orb"></div>
    </div>

    <a class="skip-link" href="#main-content">メインコンテンツへスキップ</a>
    <Header />
    <main class="flex-1" id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
