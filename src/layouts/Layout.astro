---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import '@/styles/global.css';

import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  description?: string;
  image?: ImageMetadata | string;
  ogSlug?: string;
}

const { title, description, image, ogSlug } = Astro.props;
---

<!doctype html>
<html class="h-full" lang="ja">
  <head>
    <BaseHead description={description} image={image} ogSlug={ogSlug} title={title} />
  </head>
  <body class="min-h-full flex flex-col bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-50">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
