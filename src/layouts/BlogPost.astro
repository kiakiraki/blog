---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';
import FormattedDate from '@/components/FormattedDate.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import TableOfContents from '@/components/TableOfContents.astro';
import RelatedPosts from '@/components/RelatedPosts.astro';
import { getRelatedPosts } from '@/utils/relatedPosts';
import Icon from '@/components/Icon.astro';
import { AUTHOR_NAME, SITE_TITLE, CATEGORY_COLORS } from '../consts';

// 新しくTweetButtonをインポート
import TweetButton from '../components/TweetButton.astro';

type Props = CollectionEntry<'blog'>['data'] & {
  slug?: string;
  headings?: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
};

const { title, description, pubDate, updatedDate, heroImage, slug, category, headings } =
  Astro.props;

// 記事のURLを取得
const articleUrl = Astro.url.href;

// Get all posts sorted by date
const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Find current post index and get prev/next posts
const currentIndex = allPosts.findIndex(post => post.id === slug);
const prevPost = currentIndex < allPosts.length - 1 ? allPosts[currentIndex + 1] : null;
const nextPost = currentIndex > 0 ? allPosts[currentIndex - 1] : null;

// Get related posts
const currentPost = { id: slug, data: Astro.props } as CollectionEntry<'blog'>;
const relatedPosts = getRelatedPosts(currentPost, allPosts, 3);

// OGP画像URLを構築（構造化データ用）
const ogImageUrl =
  heroImage && typeof heroImage === 'object' && 'src' in heroImage
    ? new URL(heroImage.src, Astro.url).toString()
    : slug
      ? new URL(`/og/${slug}.png`, Astro.site).toString()
      : undefined;
---

<Layout description={description} image={heroImage} ogSlug={slug} title={title}>
  <!-- BlogPosting Structured Data -->
  <script
    is:inline
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'BlogPosting',
      headline: title,
      description: description,
      datePublished: pubDate.toISOString(),
      dateModified: (updatedDate || pubDate).toISOString(),
      author: {
        '@type': 'Person',
        name: AUTHOR_NAME,
      },
      publisher: {
        '@type': 'Organization',
        name: SITE_TITLE,
      },
      mainEntityOfPage: {
        '@type': 'WebPage',
        '@id': articleUrl,
      },
      ...(category && { articleSection: category }),
      ...(ogImageUrl && {
        image: {
          '@type': 'ImageObject',
          url: ogImageUrl,
        },
      }),
    })}
    type="application/ld+json"
  />
  <article class="py-8">
    {
      heroImage && (
        <div class="mb-8">
          <Image
            alt={title}
            class="w-full h-64 md:h-96 object-cover rounded-lg shadow-lg"
            decoding="async"
            fetchpriority="high"
            height={600}
            loading="eager"
            src={heroImage}
            width={1200}
          />
        </div>
      )
    }

    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="lg:grid lg:grid-cols-12 lg:gap-8">
          <!-- Main Content -->
          <div class="lg:col-span-8">
            <!-- Article Header -->
            <header class="mb-8 text-center animate-fade-in">
              <h1
                class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 text-pretty"
              >
                {title}
              </h1>

              <div
                class="flex flex-col sm:flex-row items-center justify-center gap-4 text-sm text-gray-600 dark:text-gray-300"
              >
                <div class="flex items-center gap-2">
                  <Icon class="w-4 h-4" name="calendar" />
                  <span>公開日: <FormattedDate date={pubDate} /></span>
                </div>

                {
                  updatedDate && (
                    <div class="flex items-center gap-2">
                      <Icon class="w-4 h-4" name="refresh" />
                      <span>
                        更新日: <FormattedDate date={updatedDate} />
                      </span>
                    </div>
                  )
                }
              </div>

              <!-- Category Badge -->
              <div class="mt-4">
                <a
                  class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-sm font-medium transition-all hover:opacity-80"
                  href={`/category/${category || ''}/`}
                  style={category ? `color: ${CATEGORY_COLORS[category].fg}; background: ${CATEGORY_COLORS[category].bg};` : ''}
                >
                  <Icon class="w-4 h-4" name="tag" />
                  {category}
                </a>
              </div>

              <div class="section-label justify-center mt-6 max-w-xs mx-auto">
                <span>Article</span>
              </div>
            </header>

            <!-- Mobile TOC -->
            <div class="lg:hidden">
              {headings && headings.length > 0 && <TableOfContents headings={headings} />}
            </div>

            <!-- Article Content -->
            <div class="prose prose-lg dark:prose-invert max-w-none">
              <slot />
            </div>

            <!-- ここにTweetButtonを配置 -->
            <div class="tweet-button-container" style="text-align: center; margin-top: 3em;">
              <TweetButton title={title} url={articleUrl} />
            </div>

            <!-- Related Posts -->
            <RelatedPosts relatedPosts={relatedPosts} />

            <!-- Article Navigation -->
            {
              (prevPost || nextPost) && (
                <nav class="mt-12 pt-8 border-t border-gray-200 dark:border-[rgba(51,65,85,0.3)]">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {prevPost && (
                      <div class="text-left">
                        <p class="text-sm text-gray-500 dark:text-gray-300 mb-2">前の記事</p>
                        <a
                          aria-label={prevPost.data.title}
                          class="group block card hover:shadow-lg transition-all duration-200"
                          href={`/blog/${prevPost.id}/`}
                        >
                          <div class="flex items-center gap-3">
                            <Icon
                              class="w-5 h-5 text-gray-400 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors"
                              name="chevron-left"
                            />
                            <div class="flex-1 min-w-0">
                              <h3 class="font-medium text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors line-clamp-2">
                                {prevPost.data.title}
                              </h3>
                              <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">
                                <FormattedDate date={prevPost.data.pubDate} />
                              </p>
                            </div>
                          </div>
                        </a>
                      </div>
                    )}

                    {nextPost && (
                      <div class="text-right md:col-start-2">
                        <p class="text-sm text-gray-500 dark:text-gray-300 mb-2">次の記事</p>
                        <a
                          aria-label={nextPost.data.title}
                          class="group block card hover:shadow-lg transition-all duration-200"
                          href={`/blog/${nextPost.id}/`}
                        >
                          <div class="flex items-center gap-3">
                            <div class="flex-1 min-w-0">
                              <h3 class="font-medium text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors line-clamp-2">
                                {nextPost.data.title}
                              </h3>
                              <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">
                                <FormattedDate date={nextPost.data.pubDate} />
                              </p>
                            </div>
                            <Icon
                              class="w-5 h-5 text-gray-400 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors"
                              name="chevron-right"
                            />
                          </div>
                        </a>
                      </div>
                    )}
                  </div>
                </nav>
              )
            }

            <!-- Article Footer -->
            <footer class="mt-8 pt-8 border-t border-gray-200 dark:border-[rgba(51,65,85,0.3)]">
              <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                <div class="flex items-center gap-4">
                  <a
                    class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium transition-colors"
                    href="/blog"
                  >
                    ← ブログ一覧に戻る
                  </a>
                </div>
              </div>
            </footer>
          </div>

          <!-- Table of Contents Sidebar -->
          <aside class="hidden lg:block lg:col-span-4">
            <div class="lg:sticky lg:top-8">
              {headings && headings.length > 0 && <TableOfContents headings={headings} />}
            </div>
          </aside>
        </div>
      </div>
    </div>
  </article>
</Layout>
