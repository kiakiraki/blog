---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === '/' + (subpath?.[0] || '');
---

<a
  class:list={[
    'nav-link',
    className,
    {
      'text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/30': isActive,
    },
  ]}
  data-href={href}
  data-nav-link
  href={href}
  {...props}
>
  <slot />
</a>

<script>
  const activeClass = 'text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/30';
  const activeClasses = activeClass.split(' ');

  function updateActiveLinks(): void {
    const pathname = window.location.pathname;
    const subpath = pathname.match(/[^\/]+/g);
    const navLinks = document.querySelectorAll<HTMLAnchorElement>('[data-nav-link]');

    navLinks.forEach(link => {
      const href = link.dataset.href || '';
      const isActive = href === pathname || href === '/' + (subpath?.[0] || '');

      if (isActive) {
        link.classList.add(...activeClasses);
      } else {
        link.classList.remove(...activeClasses);
      }
    });
  }

  // Update on View Transitions page swap
  document.addEventListener('astro:after-swap', updateActiveLinks);
</script>
