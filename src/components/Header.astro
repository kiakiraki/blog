---
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
import Icon from './Icon.astro';
import { SITE_TITLE, CATEGORIES } from '../consts';

const GITHUB_URL = 'https://github.com/kiakiraki/blog';
---

<header
  class="sticky top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-700"
>
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between h-16">
      <div class="flex items-center space-x-8">
        <h1 class="text-xl font-bold text-gray-900 dark:text-white">
          <a class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors" href="/">
            {SITE_TITLE}
          </a>
        </h1>
        <div class="hidden md:flex items-center space-x-1">
          <HeaderLink href="/">ホーム</HeaderLink>
          <HeaderLink href="/blog">ブログ</HeaderLink>

          <!-- Categories Dropdown -->
          <div class="relative">
            <button
              aria-controls="desktop-category-menu"
              aria-expanded="false"
              aria-haspopup="true"
              class="nav-link flex items-center gap-1"
              id="desktop-category-button"
              type="button"
            >
              カテゴリ
              <Icon
                class="w-4 h-4 transition-transform duration-200"
                name="chevron-down"
              />
            </button>
            <div
              class="absolute left-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 z-10 hidden"
              id="desktop-category-menu"
              role="menu"
            >
              <div class="py-2">
                {
                  CATEGORIES.map(category => (
                    <a
                      class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                      href={`/blog?category=${encodeURIComponent(category)}`}
                      role="menuitem"
                    >
                      {category}
                    </a>
                  ))
                }
              </div>
            </div>
          </div>

          <HeaderLink href="/about">プロフィール</HeaderLink>
        </div>
      </div>

      <div class="flex items-center space-x-4">
        <div class="hidden sm:flex items-center space-x-3">
          <a
            aria-label="GitHub"
            class="text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white transition-colors"
            href={GITHUB_URL}
            rel="noopener noreferrer"
            target="_blank"
          >
            <Icon name="github" />
          </a>
          <a
            aria-label="RSS Feed"
            class="text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white transition-colors"
            href="/rss.xml"
          >
            <Icon name="rss" />
          </a>
        </div>
        <ThemeToggle />

        <button
          aria-controls="mobile-menu"
          aria-expanded="false"
          aria-label="メニューを開閉"
          class="md:hidden p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
          id="mobile-menu-button"
          type="button"
        >
          <Icon class="w-6 h-6" name="menu" />
        </button>
      </div>
    </nav>

    <div
      class="md:hidden hidden border-t border-gray-200 dark:border-gray-700 py-4"
      id="mobile-menu"
    >
      <div class="flex flex-col space-y-2">
        <HeaderLink href="/">ホーム</HeaderLink>
        <HeaderLink href="/blog">ブログ</HeaderLink>

        <!-- Mobile Categories -->
        <div class="px-3 py-2">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">カテゴリ</span>
          <div class="mt-2 space-y-1">
            {
              CATEGORIES.map(category => (
                <a
                  class="block px-2 py-1 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                  href={`/blog?category=${encodeURIComponent(category)}`}
                >
                  {category}
                </a>
              ))
            }
          </div>
        </div>

        <HeaderLink href="/about">プロフィール</HeaderLink>
        <div class="flex items-center space-x-4 pt-4">
          <a
            aria-label="GitHub"
            class="text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white transition-colors"
            href={GITHUB_URL}
            rel="noopener noreferrer"
            target="_blank"
          >
            <Icon name="github" />
          </a>
          <a
            aria-label="RSS Feed"
            class="text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white transition-colors"
            href="/rss.xml"
          >
            <Icon name="rss" />
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  function initHeader() {
    const cleanup: Array<() => void> = [];

    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      const toggleMobileMenu = () => {
        const expanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        const next = !expanded;
        mobileMenuButton.setAttribute('aria-expanded', String(next));
        mobileMenu.classList.toggle('hidden', !next);
      };
      mobileMenuButton.addEventListener('click', toggleMobileMenu);
      cleanup.push(() => mobileMenuButton.removeEventListener('click', toggleMobileMenu));
    }

    const desktopButton = document.getElementById('desktop-category-button');
    const desktopMenu = document.getElementById('desktop-category-menu');

    if (desktopButton && desktopMenu) {
      const closeMenu = () => {
        desktopMenu.classList.add('hidden');
        desktopButton.setAttribute('aria-expanded', 'false');
      };

      const openMenu = () => {
        desktopMenu.classList.remove('hidden');
        desktopButton.setAttribute('aria-expanded', 'true');
      };

      const toggleMenu = () => {
        const expanded = desktopButton.getAttribute('aria-expanded') === 'true';
        if (expanded) {
          closeMenu();
        } else {
          openMenu();
          const firstItem = desktopMenu.querySelector('a');
          if (firstItem instanceof HTMLElement) {
            firstItem.focus();
          }
        }
      };

      const handleOutsideClick = (event: MouseEvent) => {
        if (
          !desktopMenu.contains(event.target as Node) &&
          !desktopButton.contains(event.target as Node)
        ) {
          closeMenu();
        }
      };

      const handleEscape = (event: KeyboardEvent) => {
        if (event.key === 'Escape') {
          closeMenu();
          desktopButton.focus();
        }
      };

      const handleArrowDown = (event: KeyboardEvent) => {
        if (event.key === 'ArrowDown') {
          event.preventDefault();
          openMenu();
          const firstItem = desktopMenu.querySelector('a');
          if (firstItem instanceof HTMLElement) {
            firstItem.focus();
          }
        }
      };

      desktopButton.addEventListener('click', toggleMenu);
      desktopButton.addEventListener('keydown', handleArrowDown);
      desktopMenu.addEventListener('keydown', handleEscape);
      document.addEventListener('click', handleOutsideClick);

      cleanup.push(() => {
        desktopButton.removeEventListener('click', toggleMenu);
        desktopButton.removeEventListener('keydown', handleArrowDown);
        desktopMenu.removeEventListener('keydown', handleEscape);
        document.removeEventListener('click', handleOutsideClick);
      });
    }

    document.addEventListener(
      'astro:before-swap',
      () => {
        cleanup.forEach(fn => fn());
      },
      { once: true }
    );
  }

  document.addEventListener('DOMContentLoaded', initHeader);
  document.addEventListener('astro:after-swap', initHeader);
</script>
