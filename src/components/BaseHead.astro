---
import { SITE_TITLE, SITE_DESCRIPTION, AUTHOR_NAME, AUTHOR_TWITTER } from '../consts';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description?: string;
  image?: ImageMetadata | string;
  ogSlug?: string;
  robots?: string;
}

const { title, description = SITE_DESCRIPTION, image, ogSlug, robots } = Astro.props;
const canonicalURL = Astro.site ? new URL(Astro.url) : null;

if (canonicalURL && !canonicalURL.pathname.endsWith('/')) {
  canonicalURL.pathname = `${canonicalURL.pathname}/`;
}
const pageTitle = title === SITE_TITLE ? title : `${title} | ${SITE_TITLE}`;
const robotsContent = robots ?? 'index, follow';

// OGP画像のURLとタイプを生成
let ogImageUrl: string;
let ogImageType: string = 'image/jpeg'; // デフォルト

if (image && typeof image === 'string') {
  // 文字列の画像URLが指定されている場合
  ogImageUrl = new URL(image, Astro.site).toString();
  ogImageType = image.endsWith('.png')
    ? 'image/png'
    : image.endsWith('.svg')
      ? 'image/svg+xml'
      : 'image/jpeg';
} else if (image && typeof image === 'object' && 'src' in image) {
  // ImageMetadataオブジェクト（heroImage等）が指定されている場合
  ogImageUrl = new URL(image.src, Astro.url).toString();
  ogImageType = image.src.endsWith('.png')
    ? 'image/png'
    : image.src.endsWith('.svg')
      ? 'image/svg+xml'
      : image.src.endsWith('.webp')
        ? 'image/webp'
        : 'image/jpeg';
} else if (ogSlug) {
  // 動的生成画像を使用
  ogImageUrl = new URL(`/og/${ogSlug}.png`, Astro.site).toString();
  ogImageType = 'image/png';
} else {
  // フォールバック画像
  ogImageUrl = new URL(FallbackImage.src, Astro.url).toString();
  ogImageType = FallbackImage.src.endsWith('.png') ? 'image/png' : 'image/jpeg';
}
---

<!-- Font Preload -->
<link as="font" crossorigin href="/fonts/noto-sans-jp-400.woff" rel="preload" type="font/woff" />
<link as="font" crossorigin href="/fonts/noto-sans-jp-700.woff" rel="preload" type="font/woff" />

<!-- Source Sans 3 (portfolio-matching Latin font) -->
<link href="https://fonts.googleapis.com" rel="preconnect" />
<link crossorigin href="https://fonts.gstatic.com" rel="preconnect" />
<link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@400;600&display=swap" rel="stylesheet" />

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta content="width=device-width,initial-scale=1" name="viewport" />
<link href="/favicon.png" rel="icon" type="image/png" />
<link href="/sitemap-index.xml" rel="sitemap" />
<link
  href={new URL('rss.xml', Astro.site)}
  rel="alternate"
  title={SITE_TITLE}
  type="application/rss+xml"
/>
<meta content={Astro.generator} name="generator" />

<!-- Security Headers -->
<meta content="nosniff" http-equiv="X-Content-Type-Options" />
<meta content="IE=edge" http-equiv="X-UA-Compatible" />

<!-- Canonical URL -->
{canonicalURL && <link href={canonicalURL} rel="canonical" />}

<!-- Primary Meta Tags -->
<title>{pageTitle}</title>
<meta content={pageTitle} name="title" />
<meta content={description} name="description" />
<meta content={AUTHOR_NAME} name="author" />
<meta content={robotsContent} name="robots" />

<!-- Open Graph / Facebook -->
<meta content="website" property="og:type" />
<meta content={canonicalURL} property="og:url" />
<meta content={pageTitle} property="og:title" />
<meta content={description} property="og:description" />
<meta content={ogImageUrl} property="og:image" />
<meta content={ogImageUrl} property="og:image:secure_url" />
<meta content="1200" property="og:image:width" />
<meta content="630" property="og:image:height" />
<meta content={ogImageType} property="og:image:type" />
<meta content={pageTitle} property="og:image:alt" />
<meta content="ja_JP" property="og:locale" />
<meta content={SITE_TITLE} property="og:site_name" />

<!-- Twitter -->
<meta content="summary_large_image" name="twitter:card" />
<meta content={canonicalURL} name="twitter:url" />
<meta content={pageTitle} name="twitter:title" />
<meta content={description} name="twitter:description" />
<meta content={ogImageUrl} name="twitter:image" />
<meta content={pageTitle} name="twitter:image:alt" />
<meta content={AUTHOR_TWITTER} name="twitter:site" />
<meta content={AUTHOR_TWITTER} name="twitter:creator" />

<!-- Theme -->
<meta content="#0ea5e9" media="(prefers-color-scheme: light)" name="theme-color" />
<meta content="#0c0f14" media="(prefers-color-scheme: dark)" name="theme-color" />

<!-- Google AdSense -->
<script
  async
  crossorigin="anonymous"
  is:inline
  src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9612045894782550"
></script>

<!-- JSON-LD Structured Data -->
<script
  is:inline
  set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    name: SITE_TITLE,
    url: Astro.site?.toString() ?? '',
    description: description,
    inLanguage: 'ja',
  })}
  type="application/ld+json"
/>
