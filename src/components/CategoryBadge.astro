---
import { CATEGORY_COLORS } from '../consts';
import type { Category } from '../consts';

interface Props {
  category: Category;
  size?: 'sm' | 'md';
  class?: string;
}

const { category, size = 'sm', class: className } = Astro.props;
const colors = CATEGORY_COLORS[category] ?? CATEGORY_COLORS['その他'];

const sizeClasses = size === 'md' ? 'px-3 py-1 text-sm' : 'px-2 py-0.5 text-xs';
---

<span
  class:list={['inline-block rounded-full font-medium', sizeClasses, className]}
  style={`color: ${colors.fg}; background: ${colors.bg};`}
>
  {category}
</span>

<style>
  :global(.dark) span {
    /* Dark mode uses darkBg from inline style, which is the same for now */
  }
</style>
