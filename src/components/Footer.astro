---
import Icon from './Icon.astro';
import { GITHUB_URL } from '../consts';

const today = new Date();
---

<footer class="bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <p class="text-gray-600 dark:text-gray-300 text-sm">
          &copy; {today.getFullYear()} kiakiraki. All rights reserved.
        </p>
        <a
          class="text-gray-500 hover:text-gray-700 dark:text-gray-300 dark:hover:text-gray-100 text-sm transition-colors"
          href="https://kiakiraki.dev/privacy"
        >
          プライバシーポリシー
        </a>
      </div>

      <div class="flex items-center space-x-4">
        <a
          aria-label="GitHub"
          class="text-gray-500 hover:text-gray-700 dark:text-gray-300 dark:hover:text-gray-100 transition-colors"
          href={GITHUB_URL}
          rel="noopener noreferrer"
          target="_blank"
        >
          <Icon name="github" />
        </a>

        <a
          aria-label="RSS Feed"
          class="text-gray-500 hover:text-gray-700 dark:text-gray-300 dark:hover:text-gray-100 transition-colors"
          href="/rss.xml"
        >
          <Icon name="rss" />
        </a>
      </div>
    </div>

    <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
      <p class="text-center text-xs text-gray-500 dark:text-gray-300">
        Built with <a
          class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
          href="https://astro.build">Astro</a
        > and <a
          class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
          href="https://tailwindcss.com">Tailwind CSS</a
        >
      </p>
    </div>
  </div>
</footer>
